<h1>List of machines</h1>

<%= link_to 'New Machine', new_machine_path, remote: true %>
<div id="machine-form" style="display:none;"></div>

<br />
    <%@machines.each do |m|%>
    <div class = "booyah-box col-xs-10 col-xs-offset-1">
      <h2 class="machine-name">Name:<%=m.name%></h2>
      <p>Description: <%=m.description%></p>
      <p>Location: <%=m.location%></p>
      <div class="row"><%= link_to 'Edit', edit_machine_path(m), class: 'btn btn-primary btn-sm'%>
      <%= link_to 'View details', machine_path(m), class: 'btn btn-primary btn-sm'%></div>
    </div>
    <%end%>
    
    


  
      

