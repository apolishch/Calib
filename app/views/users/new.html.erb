<h1>New User</h1>

<div class="booyah-box col-xs-6 col-xs-offset-1">
  <h1>Input New user Details</h1>
  <%=simple_form_for @user do |f| %>
  <%=f.error_notification%>
    <%=f.input :name%>
    <%=f.association :side, label_method: :side, value_method: :id, include_blank: false%>
    <br />
    <%=f.submit 'Create', class: 'btn btn-primary'%>
  <%end%>
  <br />
</div>